<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @actor.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <img src="<%= @actor.image_url %>" class="thumbnail center-block">

            <dl class="dl-horizontal">
              <dt>Dob</dt>
              <dd><%= @actor.dob %></dd>

              <dt>Bio</dt>
              <dd><%= truncate(@actor.bio, :length => 255) %></dd>
            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/actors" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
      <% @actor.movies.each do |movie| %>
        <li class="list-group-item">
          <a href="/movies/<%= movie.id %>">
            <%= movie.title %>
          </a>
        </li>
      <% end %>
      </ul>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
